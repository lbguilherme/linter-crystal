{
  "name": "linter-crystal",
  "main": "./lib/linter-crystal",
  "version": "3.2.4",
  "description": "Lint Crystal using the Crystal compiler",
  "repository": "https://github.com/AtomLinter/linter-crystal",
  "license": "MIT",
  "engines": {
    "atom": ">0.50.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "package-deps": [
    "language-crystal-actual",
    "linter"
  ],
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "dependencies": {
    "atom-linter": "^5.0.2",
    "atom-package-deps": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^2.13.1",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-plugin-import": "^1.9.2"
  },
  "eslintConfig": {
    "rules": {
      "global-require": 0,
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "extends": "airbnb-base",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    }
  }
}
